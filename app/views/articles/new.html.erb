<h1 class="text-center bg-dark text-light p-3 index-header">New Article</h1>
<div class="container mt-5">
<%= form_with model: @article do |form| %>
<div class="d-flex align-items-center gap-3 justify-content-center flex-column mt-5">
<div style="width: 400px; margin: auto">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
    <div class="alert alert-danger" role="alert">
        <%= message %>
    </div>
    <% end %>
</div>

<div style="width: 400px; margin: auto">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
    <% @article.errors.full_messages_for(:description).each do |message| %>
    <div class="alert alert-danger" role="alert">
        <%= message %>
    </div>
    <% end %>
</div>
    <div>
        <%= form.submit class: "btn btn-primary" %>
    </div>
<% end %>
</div>
</div>